              = profile.fullname
              | (<span class="username">{{username}}</span>)
            if isBoardMember
              .quiet ({{_ 'joined'}})

      +EasySearch.IfSearching(index=searchIndex)
        +spinner

      +EasySearch.IfNoResults(index=searchIndex)
        .manage-member-section
          p.quiet {{_ 'no-results'}}
